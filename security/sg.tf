
resource "aws_security_group" "app_sg" {
  name = "app_security_group"
  description = "Allow HTTP from Anywhere"
  ingress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  ingress {
    from_port = 80
    to_port = 80
    protocol = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

}

output "app_sg_id" {
  value = "${aws_security_group.app_sg.id}"
}